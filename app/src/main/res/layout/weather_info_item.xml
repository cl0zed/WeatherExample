<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:orientation="vertical"
    a:layout_width="match_parent"
    a:layout_height="match_parent">

    <TextView
        a:id="@+id/date_text"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:padding="@dimen/app_name_padding"/>

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal">

        <TextView
            a:id="@+id/day_temp_text"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:paddingLeft="@dimen/app_name_padding"/>

        <TextView
            a:id="@+id/night_temp_text"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:paddingLeft="@dimen/app_name_padding"/>

        <TextView
            a:id="@+id/morning_temp_text"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:paddingLeft="@dimen/app_name_padding"/>
    </LinearLayout>

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal"
        a:padding="@dimen/app_name_padding">

        <TextView
            a:id="@+id/pressure_text"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content" />

        <TextView
            a:id="@+id/humidity_text"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:paddingLeft="@dimen/app_name_padding"/>
    </LinearLayout>

    <TextView
        a:id="@+id/weather_description"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:paddingLeft="@dimen/app_name_padding"
        a:paddingBottom="@dimen/app_name_padding"/>
</LinearLayout>